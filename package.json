{
  "name": "bor-intelligent-agent-hub",
  "version": "1.0.0",
  "description": "Bor 智能体中枢 - 瑞士军刀式的个人智能助手平台",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "vite build && cp electron/preload-fixed.cjs dist-electron/preload-fixed.cjs",
    "electron:start": "npm run electron:build && node scripts/start-electron.js",
    "electron:preview": "npm run electron:build && electron-builder --publish=never",
    "setup": "bash scripts/setup.sh",
    "setup:windows": "powershell -ExecutionPolicy Bypass -File scripts/setup.ps1",

    "start": "node test-app.js",
    "test:web": "node scripts/test-web.js",
    "pree2e": "npm run electron:build",
    "e2e": "playwright test"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.13.1",
    "@google/generative-ai": "^0.2.1",
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@vueuse/core": "^10.7.0",
    "chroma-js": "^2.4.2",
    "electron-updater": "^6.1.7",
    "highlight.js": "^11.11.1",
    "lucide-vue-next": "^0.544.0",
    "marked": "^16.3.0",
    "mermaid": "^11.12.0",
    "openai": "^4.24.1",
    "pinia": "^2.1.7",
    "uuid": "^9.0.1",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/chroma-js": "^2.4.4",
    "@types/node": "^20.10.6",
    "@vitejs/plugin-vue": "^5.0.2",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1",
    "playwright": "^1.40.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^1.8.25",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.bor.intelligent-agent-hub",
    "productName": "Bor智能体中枢",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "keywords": [
    "ai",
    "chatbot",
    "llm",
    "mcp",
    "workflow",
    "automation",
    "electron",
    "vue"
  ],
  "author": "Bor Team",
  "license": "MIT"
}
